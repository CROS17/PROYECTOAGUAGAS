<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.RegistrarVenta">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Registro de Venta"
        android:textColor="?attr/actionMenuTextColor"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner_cliente"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="99dp"
                android:layout_height="wrap_content"
                android:text="direccion:"
                android:textColor="@android:color/background_dark" />

            <EditText
                android:id="@+id/etdireccionvent"
                android:layout_width="260dp"
                android:layout_height="35dp"
                android:background="@drawable/etredondo"
                android:hint=" "
                android:inputType="textPersonName"
                android:textColor="@android:color/background_dark"
                android:textColorHint="@android:color/background_dark" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="69dp"
                android:layout_height="wrap_content"
                android:text="Cantidad Productos:"
                android:textColor="@android:color/background_dark" />

            <EditText
                android:id="@+id/etcantproductoventa"
                android:layout_width="260dp"
                android:layout_height="match_parent"
                android:background="@drawable/etredondo"
                android:hint=" "
                android:inputType="textPersonName"
                android:textColor="@android:color/background_dark"
                android:textColorHint="@android:color/background_dark" />
        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:text="Monto Total:"
            android:textColor="@android:color/background_dark" />

        <EditText
            android:id="@+id/etmontototalventa"
            android:layout_width="260dp"
            android:layout_height="35dp"
            android:background="@drawable/etredondo"
            android:hint=" "
            android:inputType="textPersonName"
            android:textColor="@android:color/background_dark"
            android:textColorHint="@android:color/background_dark" />
    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="99dp"
                android:layout_height="wrap_content"
                android:text="Precio:"
                android:textColor="@android:color/background_dark" />

            <EditText
                android:id="@+id/etprecioventa"
                android:layout_width="260dp"
                android:layout_height="35dp"
                android:background="@drawable/etredondo"
                android:hint=" "
                android:inputType="textPersonName"
                android:textColor="@android:color/background_dark"
                android:textColorHint="@android:color/background_dark" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="99dp"
                android:layout_height="wrap_content"
                android:text="IGV:"
                android:textColor="@android:color/background_dark" />

            <EditText
                android:id="@+id/etigvventa"
                android:layout_width="260dp"
                android:layout_height="35dp"
                android:background="@drawable/etredondo"
                android:hint=" "
                android:inputType="textPersonName"
                android:textColor="@android:color/background_dark"
                android:textColorHint="@android:color/background_dark" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnRegistrarVenta"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="REGISTAR" />
        </LinearLayout>
        <!-- TODO: Update blank fragment layout -->

    </LinearLayout>

</FrameLayout>