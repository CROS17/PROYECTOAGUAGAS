<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.DireccionFragment">

    <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical">
         <Button
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="BOTON PRUEBA"
             android:textSize="24dp"/>
         <Button
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="BOTON PRUEBA"
             android:textSize="24dp"/>
         <Button
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="BOTON PRUEBA"
             android:textSize="24dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="30dp"
                android:id="@+id/ic_magnify"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_magnify"/>

            <AutoCompleteTextView
                android:id="@+id/input_search"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/ic_magnify"
                android:background="@null"
                android:hint="Ingrese Direccion, Ciudad o Codigo"
                android:imeOptions="actionSearch"
                android:textColor="#000"
                android:textSize="15sp" />
        </LinearLayout>


 <!-- TODO: Update blank fragment layout -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:id="@+id/relLayout1">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/relLayout1"
                    android:layout_alignParentRight="true"
                    android:scaleType="centerCrop"
                    android:layout_marginLeft="25dp"
                    android:id="@+id/ic_gps"
                    android:src="@drawable/ic_gps"/>
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:text="Direccion Actual"/>

                <ImageView
                    android:id="@+id/place_picker"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/relLayout1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_ad" />
                <TextView
                    android:layout_width="85dp"
                    android:layout_height="40dp"
                    android:text="Diferente Direccion"
                    />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/place_picker"
                    android:scaleType="centerCrop"
                    android:id="@+id/place_info"
                    android:src="@drawable/ic_info"/>
                <TextView
                    android:layout_width="75dp"
                    android:layout_height="40dp"
                    android:text="Informacion"
                    />
            </LinearLayout>

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/mapcliente"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        tools:context=".MapsActivity">
    </fragment>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/tvdireccion"
        android:hint="Direccion"
        />
   <Button
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="BOTON PRUEBA"
       android:textSize="24dp"/>
   <Button
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="BOTON PRUEBA"
       android:textSize="24dp"/>
   <Button
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="BOTON PRUEBA"
       android:textSize="24dp"/>
   <Button
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="BOTON PRUEBA"
       android:textSize="24dp"/>
</LinearLayout>

</ScrollView>